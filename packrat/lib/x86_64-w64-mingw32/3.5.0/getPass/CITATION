year <- sub("-.*", "", meta$Date)
note <- sprintf("{R} package version %s", meta$Version)

citEntry(
  entry = "Misc",
  title = "{getPass}: Masked User Input",
  author = personList(as.person("Drew Schmidt"),
                      as.person("Wei-Chen Chen")),
  year = year,
  note = note,
  url = "https://cran.r-project.org/package=getPass",
  textVersion = NULL,
  key = "getPassPackage"
)

citEntry(
  entry = "Manual",
  title = "Guide to the {getPass} Package",
  author = personList(as.person("Drew Schmidt")),
  year = year,
  note = "{R} Vignette",
  url = "https://cran.r-project.org/package=getPass",
  textVersion = NULL,
  key = "getPassVignette"
)
